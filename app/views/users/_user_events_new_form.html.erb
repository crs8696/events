<%= form_with(model: @event, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time %>

    <%= f.date_select :time, class: "form-control" %>
  </div>

  <%= f.hidden_field :host, value: @user.id %>

  <div class="form-group">
    <%= f.label :location %>

    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>

    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comments %>

    <%= f.text_field :comments, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rsvp %>

    <%= f.text_field :rsvp, class: "form-control" %>
  </div>

  <%= f.submit "Create event", class: "btn btn-block btn-outline-secondary" %>
<% end %>
