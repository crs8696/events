<%= search_form_for @q, :class => collapse_search_form, :id => "rsvps_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :response, "Response" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :response_gteq, :class => "form-control", :placeholder => "Response greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :response_lteq, :class => "form-control", :placeholder => "Response less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "User" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :user_id_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :user_id_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :date, "Event Date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='eventgteqdatePicker' data-target-input="nearest">
          <%= f.text_field :event_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Event Date greater than or equal to", :data => {:target => '#eventgteqdatePicker'} %>
          <div class="input-group-append" data-target='#eventgteqdatePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='eventlteqdatePicker' data-target-input="nearest">
          <%= f.text_field :event_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Event Date less than or equal to", :data => {:target => '#eventlteqdatePicker'} %>
          <div class="input-group-append" data-target='#eventlteqdatePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#eventgteqdatePicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#eventlteqdatePicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#eventgteqdatePicker').on("dp.change", function (e) {
              $('#eventlteqdatePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#eventlteqdatePicker').on("dp.change", function (e) {
              $('#eventgteqdatePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :name, "User Name" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :user_name_gteq, :class => "form-control", :placeholder => "User Name greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :user_name_lteq, :class => "form-control", :placeholder => "User Name less than or equal to" %>
      </div>
    </div>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/rsvps" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#rsvps_filters">
  Show filters
</a>
