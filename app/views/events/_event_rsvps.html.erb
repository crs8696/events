<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rsvps

    <a data-toggle="collapse" href="#event_rsvps_new_form">
      Add rsvp
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.rsvps.each do |rsvp| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to rsvp, rsvp %>

        <%= link_to rsvp, method: :delete, data: { confirm: "Do you really want to delete this rsvp" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_rsvps_new_form">
        <%= render partial: "events/event_rsvps_new_form" %>
      </div>
    </div>

  </ul>
</div>
